<html>
    <head>
        <title><%=title%></title>
        <link rel="stylesheet" href="/css/style.css">
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    </head>
    <body>

        <div id="centre">
            <h1 class="heading">ToDo App</h1>
            
            <div class="input-data">
                <form action="/add-list" method="post">
                    <div class="des-input">
                        <label for="Descrip">Description</label>
                        <input type="text" id="descrip" name="description" required placeholder="What do you need to do">
                    </div>
                   
                    
                   <div class="cat-input">
                        <label for="category">Select Category</label>
                        <select name="category" id="category">
                            <option value="personal">Personal</option>
                            <option value="school">School</option>
                            <option value="Work">Work</option>
                            <option value="other">Other</option>
                        </select>
                   </div>

                   <div class="date-input">
                        <label for="dated">Due Date</label>
                        <input type="date" id="dated" name="time" required placeholder="Date">
                    </div>
                    
                    <button type="submit"><i class='fas fa-plus'></i>Add Task</button>
                </form>

            </div>
           
            <div class="list">
                <ul>
                    <% for(let i of todo_list){ %>
                        <li class="content">
                            <div class="head-list">
                                <h3>
                                    <%= i.des %>
                                </h3>
                            </div>

                            <div class="due-list">
                                <p>Due Date: <%=i.date %></p>
                            </div>

                            <div class="cat-list">
                                <h5><%= i.category %></h5>
                            </div>

                            <div class="delete-btn">
                                <a href="/delete-contact/?id=<%= i.id %>">
                                    <button><i class='fas fa-trash-alt'></i>Delete</button>
                                </a>
                            </div>

                            
                        </li>
                        
                    <%} %>
                </ul>
            </div>

        </div>
        

    </body>
</html>